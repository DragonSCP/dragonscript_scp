local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Cria√ß√£o do ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = PlayerGui

-- Cria√ß√£o do bot√£o flutuante com emoji
local FloatingButton = Instance.new("TextButton")
FloatingButton.Size = UDim2.new(0, 50, 0, 50)
FloatingButton.Position = UDim2.new(0.5, -25, 0.5, -25) -- Centraliza o bot√£o
FloatingButton.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
FloatingButton.BorderSizePixel = 0
FloatingButton.Text = "üêâ" -- Emoji que voc√™ escolheu
FloatingButton.TextScaled = true
FloatingButton.BackgroundTransparency = 0.5
FloatingButton.Parent = ScreenGui

-- Cria√ß√£o do menu flutuante
local function createMenu()
    local MainFrame = Instance.new("Frame")
    MainFrame.Size = UDim2.new(0, 200, 0, 300)
    MainFrame.Position = UDim2.new(0.5, -100, 0.5, -150) -- Centraliza o menu na tela
    MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui

    -- Parte superior com bot√µes de fechar, voltar e salvar
    local TopFrame = Instance.new("Frame")
    TopFrame.Size = UDim2.new(1, 0, 0, 30)
    TopFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    TopFrame.BorderSizePixel = 0
    TopFrame.Parent = MainFrame

    -- Bot√£o de fechar
    local CloseButton = Instance.new("TextButton")
    CloseButton.Size = UDim2.new(0, 30, 1, 0)
    CloseButton.Position = UDim2.new(0, 0, 0, 0)
    CloseButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    CloseButton.Text = "X"
    CloseButton.Parent = TopFrame

    -- Bot√£o de voltar
    local BackButton = Instance.new("TextButton")
    BackButton.Size = UDim2.new(0, 30, 1, 0)
    BackButton.Position = UDim2.new(0, 35, 0, 0)
    BackButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    BackButton.Text = "<"
    BackButton.Parent = TopFrame

    -- Bot√£o de salvar
    local SaveButton = Instance.new("TextButton")
    SaveButton.Size = UDim2.new(0, 30, 1, 0)
    SaveButton.Position = UDim2.new(0, 70, 0, 0)
    SaveButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    SaveButton.Text = "S"
    SaveButton.Parent = TopFrame

    -- Cria√ß√£o do ScrollingFrame
    local ScrollingFrame = Instance.new("ScrollingFrame")
    ScrollingFrame.Size = UDim2.new(1, 0, 1, -30)
    ScrollingFrame.Position = UDim2.new(0, 0, 0, 30) -- Ajusta a posi√ß√£o para n√£o sobrepor a parte superior
    ScrollingFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    ScrollingFrame.BorderSizePixel = 0
    ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 600) -- Ajuste a altura do canvas conforme necess√°rio
    ScrollingFrame.Parent = MainFrame

    local UIListLayout = Instance.new("UIListLayout")
    UIListLayout.Parent = ScrollingFrame
    UIListLayout.Padding = UDim.new(0, 5)

    MainFrame.Parent = ScreenGui
end

-- Conex√£o do bot√£o flutuante para abrir o menu
FloatingButton.MouseButton1Click:Connect(function()
    createMenu()
    FloatingButton.Visible = false  -- Oculta o bot√£o flutuante quando o menu est√° aberto
end)
